<UserControl x:Class="FirmaTransportowa.Views.DodajZlecenie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirmaTransportowa.Views"
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="750">
    <Grid Background="#FF646464">
        <StackPanel>
            <TextBox Name="Comment" Width="700" Height="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 25"/>
            <StackPanel Orientation="Horizontal" Margin="25 0" Width="450">
                <Button Content="Zatwierdź" Width="200" Height="50" Click="Dodaj_Zlecenie"/>
                <Button Content="Anuluj" Width="200" Height="50" Margin="50 0 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
